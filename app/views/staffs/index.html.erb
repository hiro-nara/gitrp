<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Staff no</th>
      <th>Name</th>
      <th>Dep 1st</th>
      <th>Dep 2nd</th>
      <th>Dep 3rd</th>
      <th>Dep bunshitsu</th>
      <th>Position</th>

      <th>等級</th>
      <th>grade</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td style="padding:0px 5px"><%= staff.staff_no %></td>
        <td style="padding:0px 5px"><%= staff.name %></td>
        <td style="padding:0px 5px"><%= staff.dep_1st %></td>
        <td style="padding:0px 5px"><%= staff.dep_2nd %></td>
        <td style="padding:0px 5px"><%= staff.dep_3rd %></td>
        <td style="padding:0px 5px"><%= staff.dep_bunshitsu %></td>
        <td style="padding:0px 5px"><%= staff.position %></td>
        <td style="padding:0px 5px"><%= staff.tokyu %></td>
        <td style="padding:0px 5px"><%= staff.grade %></td>
        <td style="padding:0px 5px"><%= link_to 'Show', staff %></td>
        <td style="padding:0px 5px"><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td style="padding:0px 5px"><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

